{% extends "base.jinja" %}

{% block head_content %}
<script src="/static/bower_components/handsontable/dist/handsontable.full.js"></script>
<link rel="stylesheet" media="screen" href="/static/bower_components/handsontable/dist/handsontable.full.css">
{% endblock %}

{% block page_content %}


<h3>Add tabular data from a PDF document</h3>

<div>
<b>Step 1: Upload and page selection</b>
Upload a PDF document, and indicate a page you wish to add into the database. The page should contain a table with information on extractives reserve, production or cost figures
</div>
<br/>
<br/>

{% if form.errors %}
    {% for field in form %}
        {% for error in field.errors %}
            <div class="alert alert-error">
                <strong>{{ error|escape }}</strong>
            </div>
        {% endfor %}
    {% endfor %}
    {% for error in form.non_field_errors() %}
        <div class="alert alert-error">
            <strong>{{ error|escape }}</strong>
        </div>
    {% endfor %}


{% endif %}


<form action="#" method="POST"  enctype="multipart/form-data" >
<table>
<input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
{{form.as_table()}}
</table>
<input type="submit"/>
</form>
<script>
$(document).ready(function(){
  $('#id_publish_date').datepicker({
      changeMonth: true,
      changeYear: true});
  });
</script>

{% endblock %}
